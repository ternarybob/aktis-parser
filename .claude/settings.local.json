{
  "permissions": {
    "allow": [
      "Bash(gofmt:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(go test:*)",
      "Bash(powershell:*)",
      "Bash(go clean:*)",
      "Bash(go build:*)",
      "Bash(./aktis-parser.exe)",
      "Bash(netstat:*)",
      "Bash(findstr:*)",
      "Bash(taskkill:*)",
      "Bash(timeout:*)",
      "Bash(curl:*)",
      "Bash(tasklist)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/remind-standards.js"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/go-enforce-structure.js"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/go-enforce-structure.js"
          }
        ]
      }
    ]
  }
}