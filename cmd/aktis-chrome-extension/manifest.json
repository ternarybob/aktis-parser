{
  "manifest_version": 3,
  "name": "Aktis Parser Auth Capture",
  "version": "0.1.72",
  "description": "Captures authentication data from Jira/Confluence for Aktis Parser",
  "permissions": [
    "cookies",
    "activeTab",
    "tabs",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost/*",
    "https://*.atlassian.net/*",
    "https://*.jira.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Aktis Parser"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
